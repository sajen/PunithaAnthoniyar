<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_bg_gradient">

    <com.church.punithaanthoniyar.customviews.CircleImageView
        android:id="@+id/im_user"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:src="@drawable/st_antony_blk_whte"
        app:civ_circle_background_color="#989292"
        app:civ_border_width="@dimen/_1sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_125sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_user"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:text="@string/antony_church"
        android:gravity="center"
        android:textAllCaps="true"
        app:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:text="@string/ramesh_nagar"
        android:gravity="center"
        android:textAllCaps="true"
        app:fontFamily="@font/roboto_light"
        android:padding="@dimen/_5sdp"/>

</RelativeLayout>