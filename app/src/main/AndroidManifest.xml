<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.church.punithaanthoniyar">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplicationClass"
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PunithaAnthoniyar"
        tools:replace="android:appComponentFactory">
        <activity
            android:name=".verseofday.VerseOfDayActivity"
            android:exported="true" />
        <activity
            android:name=".saintofday.SaintOfDayActivity"
            android:exported="true" />
        <activity
            android:name=".sendmessage.SendMessageActivity"
            android:exported="true" />
        <activity
            android:name=".masstiming.MassTimingActivity"
            android:exported="true" />
        <activity
            android:name=".about.AboutActivity"
            android:exported="true" />
        <activity
            android:name=".todayprayer.TodayPrayerActivity"
            android:exported="true" />
        <activity
            android:name=".home.view.HomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".launch.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.BaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PunithaAnthoniyar.NoActionBar" />
    </application>

</manifest>